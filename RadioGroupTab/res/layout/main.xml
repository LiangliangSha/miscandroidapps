<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	
    <LinearLayout android:layout_width="fill_parent"
    	android:layout_height="49.0dip"
    	android:padding="5.0dip"
    	android:background="@drawable/searchfilter_panel">
	    <RadioGroup 
	    	android:layout_gravity="center_vertical"
	    	android:gravity="center" 
	    	android:orientation="horizontal" 
	    	android:id="@+id/content_tabs" 
	    	android:layout_width="fill_parent" 
	    	android:layout_height="fill_parent">
	    	<RadioButton
	    		android:id="@+id/all_channels"
	    		android:text="All Channels"
	    		android:layout_width="0dip"
	    		android:layout_height="fill_parent"
	    		android:layout_weight="1.0" style="@style/ContentTabRadioButton"/>
	    	<RadioButton
	    		android:id="@+id/favorite_channels"
	    		android:text="Favorite Channels"
	    		android:layout_width="0dip"
	    		android:layout_height="fill_parent"
	    		android:layout_weight="1.0" style="@style/ContentTabRadioButton"/>
	    	<RadioButton 
	    		android:id="@+id/program_reminders"
	    		android:text="Program Reminders"
	    		android:layout_width="0dip"
	    		android:layout_height="fill_parent"
	    		android:layout_weight="1.0" style="@style/ContentTabRadioButton"/>
	    </RadioGroup>
    </LinearLayout>
    
    <TextView android:id="@+id/content"
    	android:layout_width="fill_parent" 
    	android:layout_height="fill_parent"
    	android:gravity="center" 
    	android:text="@string/hello"/>
</LinearLayout>
