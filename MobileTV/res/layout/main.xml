<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<include layout="@layout/title" android:id="@+id/title_bar"/>
	
	<LinearLayout
		android:id="@+id/tab_bar" 
		android:layout_width="fill_parent"
		android:layout_height="@dimen/tab_bar_height"
		android:orientation="horizontal"
		android:paddingLeft="5dip"
		android:paddingRight="5dip">
		<TextView android:id="@+id/tab_service_all" 
			android:layout_width="102dip" 
			android:layout_height="fill_parent"
			android:text="全部频道"
			android:gravity="center_vertical|center_horizontal"
			android:background="@drawable/tab_button" 
			android:textColor="@android:color/white"
			android:focusable="true"
			android:clickable="true"/>
		<View android:layout_width="2dip" 
			android:layout_height="fill_parent"
			 />
		<TextView android:id="@+id/tab_service_favorite" 
			android:layout_width="102dip" 
			android:layout_height="fill_parent"
			android:clickable="true" 
			android:text="收藏频道"
			android:gravity="center_vertical|center_horizontal"
			android:background="@drawable/tab_button" 
			android:textColor="@android:color/white"
			android:focusable="true" />
		<View android:layout_width="2dip" 
			android:layout_height="fill_parent"
			 />
		<TextView android:id="@+id/tab_content_remind" 
			android:layout_width="102dip" 
			android:layout_height="fill_parent"
			android:clickable="true" 
			android:text="节目提醒"
			android:gravity="center_vertical|center_horizontal"
			android:background="@drawable/tab_button"
			android:textColor="@android:color/white" 
			android:focusable="true"
			android:enabled="true" />
	</LinearLayout>
	
	<ViewFlipper android:id="@+id/view_flipper"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1.0">
		<ListView android:id="@+id/list_service_all"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"/>
		<ListView android:id="@+id/list_service_favorite"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"/>
		<ListView android:id="@+id/list_content_remind"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"/>
	</ViewFlipper>
</LinearLayout>
