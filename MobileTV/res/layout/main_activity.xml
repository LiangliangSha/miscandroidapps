<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tabbar="http://schemas.android.com/apk/res/com.pekall.mobiletv"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<include layout="@layout/title" android:id="@+id/title_bar"/>
	
	<com.pekall.mobiletv.ui.TabBar android:id="@+id/tab_bar" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		tabbar:tabHorizontalPadding="1dip"
		tabbar:tabSpacing="1dip"
		tabbar:tabWidth="104dip"
		tabbar:tabHeight="40dip"
		tabbar:textSize="16sp"
		tabbar:tabButtonDrawable="@drawable/tab_indicator"
		tabbar:tabSeperatorDrawable="@color/tab_bar_seperator"
		tabbar:tabSeperatorHeight="2dip"/>
	
	<ViewFlipper android:id="@+id/view_flipper"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1.0">
		<ListView android:id="@+id/list_service_all"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"/>
		<ListView android:id="@+id/list_service_favorite"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"/>
		<ListView android:id="@+id/list_content_remind"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"/>
	</ViewFlipper>
</LinearLayout>
